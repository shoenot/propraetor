# ==============================================================================
# Propraetor — Environment Configuration
# ==============================================================================
# Copy this file to `.env` in the project root and edit as needed.
#
#   cp propraetor/env.example .env
#
# All values shown here are the defaults used when the variable is unset.
# ==============================================================================


# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------

# REQUIRED in production. Generate one with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-real-secret-key

# Set to False in production. Never run DEBUG=True on a public server.
DEBUG=True

# Comma-separated list of hostnames/IPs that Django will serve.
# In production, set this to your actual domain(s).
#   e.g. ALLOWED_HOSTS=propraetor.example.com,192.168.1.50
ALLOWED_HOSTS=localhost,127.0.0.1


# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------

# SQLite (default — no configuration needed for local development):
#   DATABASE_URL is ignored when unset; Django uses db.sqlite3.
#
# PostgreSQL:
#   DATABASE_URL=postgres://user:password@localhost:5432/propraetor
#
# MySQL / MariaDB:
#   DATABASE_URL=mysql://user:password@localhost:3306/propraetor
DATABASE_URL=


# ------------------------------------------------------------------------------
# Internationalization
# ------------------------------------------------------------------------------

# IANA timezone identifier.  https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIME_ZONE=Asia/Dhaka

LANGUAGE_CODE=en-us


# ------------------------------------------------------------------------------
# Static & Media Files
# ------------------------------------------------------------------------------

# URL prefix for static files.
STATIC_URL=/static/

# Absolute path where `collectstatic` gathers files. Leave empty for default.
STATIC_ROOT=

# URL prefix for user-uploaded media.
MEDIA_URL=/media/


# ------------------------------------------------------------------------------
# Email (optional — uncomment and configure for password resets, notifications)
# ------------------------------------------------------------------------------

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=


# ------------------------------------------------------------------------------
# Production Hardening (ignored when DEBUG=True)
# ------------------------------------------------------------------------------

# Redirect all HTTP requests to HTTPS.
# SECURE_SSL_REDIRECT=True

# Set the HSTS header (seconds). 31536000 = 1 year.
# SECURE_HSTS_SECONDS=31536000

# Instruct browsers to only send the session cookie over HTTPS.
# SESSION_COOKIE_SECURE=True

# Instruct browsers to only send the CSRF cookie over HTTPS.
# CSRF_COOKIE_SECURE=True

# Comma-separated origins trusted for CSRF.
#   e.g. CSRF_TRUSTED_ORIGINS=https://propraetor.example.com
# CSRF_TRUSTED_ORIGINS=


# ------------------------------------------------------------------------------
# Gunicorn (used by the systemd service / deployment scripts)
# ------------------------------------------------------------------------------

# Bind address for gunicorn.
GUNICORN_BIND=127.0.0.1:8000

# Number of worker processes. A good default is (2 × CPU cores) + 1.
GUNICORN_WORKERS=3

# Worker timeout in seconds.
GUNICORN_TIMEOUT=120